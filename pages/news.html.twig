{% extends 'layouts/base.html.twig' %}

{% block title %}
    Yangiliklar
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col col-md-6">
                <h1 class="text-center mb-3">Yangiliklar</h1>
                {% for newsItem in news %}
                    <div class="card mb-4">
                        <img src="{{ newsItem.image }}" class="card-img-top" alt="{{ newsItem.name }}">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ newsItem.name }}
                            </h5>
                            <p>
                                {{ newsItem.content }}
                            </p>
                            <a href="#" class="card-link">O'zgartirish</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}